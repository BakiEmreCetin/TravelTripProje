@using TravelTripProje.Models.Sınıflar
@model List<Blog>
<div class="con-bot">
    @foreach (var x in Model)
    {
    <div class="left">
        <div class="bot-left">
            <img src="@x.BlogImage" style="width:320px; height:190px;" alt="" />
        </div>
        <div class="left-text">
            <h4>@x.Baslik</h4>
            <span class="">@x.Tarih.ToString("dd.MM.yyyy")</span>
            <p>@x.Aciklama.Substring(0,80)</p>
            <p><a href="/Blog/BlogDetay/@x.ID"><span class="read">Devamını Oku>></span></a></p>
        </div>       
    </div>
    }

    @Html.Action("Partial2","Default")
    
    <div class="clear"></div>
</div>
