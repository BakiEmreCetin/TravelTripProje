@model TravelTripProje.Models.Sınıflar.Hakkimizda
@{
    ViewBag.Title = "Hakkimizda";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hakkımızda</h2>
<br />
<br />

@using (Html.BeginForm("HakkimizdaGuncelle", "Admin", FormMethod.Post))
{

    <form class="form-group" method="post">
        @Html.HiddenFor(x => x.ID)
        <label>Fotoğraf Url</label>
        @Html.TextBoxFor(x => x.FotoUrl, new { @class = "form-control" })
        <br />
        <label>Açıklama</label>
        @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control", @rows = "8" })
        <br />

        <br />

        <button class="btn btn-primary">Güncelle</button>
    </form>
}
